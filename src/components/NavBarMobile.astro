---
// src/components/NavbarMobile.astro
---

<div class="btm-nav fixed bottom-0 left-0 right-0 w-full z-50 bg-base-100 border-t border-base-200 h-16 flex justify-center items-center">
  
  <button class="text-primary active" onclick="mobile_menu_modal.showModal()">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-white">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
    </svg>
    
  </button>

</div>

<dialog id="mobile_menu_modal" class="modal modal-bottom sm:modal-middle">
  
  <div class="modal-box bg-base-100">
    <h3 class="font-bold text-lg font-krona mb-6 text-center text-primary">DiazDEV</h3>
    
    <ul class="menu menu-lg w-full rounded-box">
        <li>
            <a href="#sobre-mi" class="menu-link font-mono justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                SOBRE MÍ
            </a>
        </li>
        <li>
            <a href="#formacion" class="menu-link font-mono justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>
                FORMACIÓN
            </a>
        </li>
        <li>
            <a href="#proyectos" class="menu-link font-mono justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>
                PROYECTOS
            </a>
        </li>
        <li>
            <a href="#contacto" class="menu-link font-mono justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                CONTACTO
            </a>
        </li>
    </ul>

    <div class="modal-action justify-center">
      <form method="dialog">
        <button class="btn btn-circle btn-outline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
      </form>
    </div>
  </div>

  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<script>
    const modal = document.getElementById('mobile_menu_modal');
    const links = document.querySelectorAll('.menu-link');

    links.forEach(link => {
        link.addEventListener('click', () => {
            modal.close();
        });
    });
</script>